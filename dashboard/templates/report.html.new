<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Post-Quantum TLS Security Report</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .risk-badge {
            font-size: 0.8rem;
            padding: 0.25rem 0.5rem;
            border-radius: 0.25rem;
        }
        .risk-CRITICAL { background: #dc3545; color: white; }
        .risk-HIGH { background: #fd7e14; color: white; }
        .risk-MEDIUM { background: #ffc107; color: black; }
        .risk-LOW { background: #28a745; color: white; }
        .pq-readiness-gauge {
            width: 150px;
            height: 150px;
            margin: 1rem auto;
            position: relative;
            border: 8px solid #eee;
            border-radius: 50%;
        }
        .pq-readiness-value {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 2rem;
            font-weight: bold;
        }
        .scenario-card {
            margin-bottom: 1.5rem;
            border-left-width: 5px !important;
        }
        .scenario-CRITICAL { border-left-color: #dc3545 !important; }
        .scenario-HIGH { border-left-color: #fd7e14 !important; }
        .scenario-MEDIUM { border-left-color: #ffc107 !important; }
        .scenario-LOW { border-left-color: #28a745 !important; }
        .check-list {
            list-style: none;
            padding: 0;
        }
        .check-list li {
            padding: 0.5rem 0;
            border-bottom: 1px solid #eee;
        }
        .check-list li:last-child {
            border-bottom: none;
        }
        .check-pass { color: #28a745; }
        .check-fail { color: #dc3545; }
        pre { 
            background: #f8f9fa; 
            padding: 1rem; 
            border-radius: 0.25rem;
            font-size: 0.875rem;
            max-height: 200px;
            overflow-y: auto;
        }
    </style>
</head>
<body>
<div class="container-fluid mt-4 px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Post-Quantum TLS Security Assessment</h1>
        <a href="/blockchain" class="btn btn-outline-primary">View Event Log</a>
    </div>

    {% with messages = get_flashed_messages(with_categories=true) %}
        {% if messages %}
            {% for category, message in messages %}
                <div class="alert alert-{{ category }}">{{ message }}</div>
            {% endfor %}
        {% endif %}
    {% endwith %}
    
    <!-- Overall Stats -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">PQ Readiness Score</h5>
                    <div class="pq-readiness-gauge">
                        <div class="pq-readiness-value">{{ pq_readiness }}%</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Risk Summary</h5>
                    <div class="row text-center">
                        <div class="col">
                            <h3>{{ stats.total }}</h3>
                            <p class="text-muted">Total Scenarios</p>
                        </div>
                        <div class="col">
                            <h3>{{ stats.critical }}</h3>
                            <p class="text-muted">Critical Risk</p>
                        </div>
                        <div class="col">
                            <h3>{{ stats.high }}</h3>
                            <p class="text-muted">High Risk</p>
                        </div>
                        <div class="col">
                            <h3>{{ stats.medium }}</h3>
                            <p class="text-muted">Medium Risk</p>
                        </div>
                        <div class="col">
                            <h3>{{ stats.low }}</h3>
                            <p class="text-muted">Low Risk</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quantum Readiness Checks -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Quantum Readiness Assessment</h5>
        </div>
        <div class="card-body">
            <ul class="check-list">
            {% for check in pq_checks %}
                <li>
                    <i class="bi {% if check.passed %}bi-check-circle check-pass{% else %}bi-x-circle check-fail{% endif %}"></i>
                    {{ check.name }}
                </li>
            {% endfor %}
            </ul>
        </div>
    </div>

    <!-- Scenarios -->
    <div class="row">
        {% for scenario in scenarios %}
        <div class="col-md-6">
            <div class="card scenario-card scenario-{{ scenario.risk_level }}">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">{{ scenario.name }}</h5>
                    <span class="risk-badge risk-{{ scenario.risk_level }}">{{ scenario.risk_level }}</span>
                </div>
                <div class="card-body">
                    <p>{{ scenario.description }}</p>
                    
                    <h6>Attack Vector:</h6>
                    <p class="mb-3">{{ scenario.attack.type }}</p>
                    
                    <h6>Client Configuration:</h6>
                    <ul class="mb-3">
                        <li>PQ Required: 
                            <span class="badge {% if scenario.client.require_pq %}bg-success{% else %}bg-danger{% endif %}">
                                {{ scenario.client.require_pq|string }}
                            </span>
                        </li>
                        <li>KEMs: <code>{{ scenario.client.kem_offers|join(', ') }}</code></li>
                        <li>Signatures: <code>{{ scenario.client.sig_offers|join(', ') }}</code></li>
                    </ul>
                    
                    <h6>Server Configuration:</h6>
                    <ul class="mb-3">
                        <li>PQ Required: 
                            <span class="badge {% if scenario.server.require_pq %}bg-success{% else %}bg-danger{% endif %}">
                                {{ scenario.server.require_pq|string }}
                            </span>
                        </li>
                        <li>KEMs: <code>{{ scenario.server.kem_offers|join(', ') }}</code></li>
                        <li>Signatures: <code>{{ scenario.server.sig_offers|join(', ') }}</code></li>
                    </ul>
                    
                    {% if scenario.test_results %}
                    <h6>Test Status:</h6>
                    <div class="alert {% if scenario.test_results.mitigation_success %}alert-success{% else %}alert-danger{% endif %}">
                        <h5 class="alert-heading mb-1">
                            {% if scenario.test_results.mitigation_success %}
                            <i class="bi bi-check-circle-fill"></i> Test Passed
                            {% else %}
                            <i class="bi bi-x-circle-fill"></i> Test Failed
                            {% endif %}
                        </h5>
                        <p class="mb-0">
                            <small class="text-muted">Last run: {{ scenario.test_results.timestamp }}</small>
                        </p>
                    </div>
                    
                    {% if scenario.test_results.transcript %}
                    <pre class="mb-0"><code>{{ scenario.test_results.transcript }}</code></pre>
                    {% endif %}
                    {% else %}
                    <p class="text-muted">No test results available</p>
                    {% endif %}
                </div>
                <div class="card-footer">
                    <form method="post" action="/run_scenario" class="d-flex gap-2">
                        <input type="hidden" name="scenario_id" value="{{ scenario.name }}">
                        <button type="submit" class="btn btn-primary w-100">Run Test</button>
                    </form>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>

    {% if error_log %}
    <div class="card mt-4">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">Error Log</h5>
        </div>
        <div class="card-body">
            <pre class="mb-0">{{ error_log }}</pre>
        </div>
    </div>
    {% endif %}
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
